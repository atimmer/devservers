{
  "name": "@24letters/devservers",
  "version": "0.1.1",
  "type": "module",
  "description": "Local dev server manager CLI for macOS.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/atimmer/devservers"
  },
  "homepage": "https://github.com/atimmer/devservers#readme",
  "bugs": {
    "url": "https://github.com/atimmer/devservers/issues"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "devservers": "dist/index.js"
  },
  "files": [
    "dist",
    "skills",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "devservers",
    "tmux",
    "devtools",
    "cli",
    "macos"
  ],
  "engines": {
    "node": ">=20"
  },
  "os": [
    "darwin"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint src",
    "format": "prettier --write src"
  },
  "dependencies": {
    "@24letters/devservers-daemon": "workspace:*",
    "@24letters/devservers-shared": "workspace:*",
    "commander": "^14.0.2"
  }
}
